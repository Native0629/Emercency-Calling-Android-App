<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siae.siaecajamarca.ValidacionActivity">
    <ImageView
        android:id="@+id/bgone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/cajamarca3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgoverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="55dp"
                android:paddingRight="55dp"
                android:src="@drawable/starter_logo_full"

                >

            </ImageView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="COMPLETE LOS SIGUIENTES CAMPOS"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="0dp"
                    android:padding="5dp"

                    android:textStyle="bold"
                    android:textColor="#fff"

                    android:textSize="15dp"></TextView>
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@drawable/login_caja_texto">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:tint="#fff"
                        android:src="@drawable/maili"
                        ></ImageView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Correo"
                        android:hint="Correo"
                        android:textColorHint="#fff"
                        android:textSize="20dp"
                        android:paddingLeft="13dp"
                        android:layout_marginTop="15dp"
                        android:inputType="text"
                        android:textColor="#fff"
                        android:maxLines="1"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="15dp">
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@drawable/login_caja_texto">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:tint="#fff"
                        android:src="@drawable/celular2"
                        ></ImageView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Celular"
                        android:hint="Celular"
                        android:textColorHint="#fff"
                        android:textSize="20dp"
                        android:paddingLeft="13dp"
                        android:layout_marginTop="15dp"
                        android:inputType="number"
                        android:maxLength="9"
                        android:textColor="#fff"
                        android:maxLines="1"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="15dp">
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@drawable/login_caja_texto">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:tint="#fff"
                        android:src="@drawable/dni_2"
                        ></ImageView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Dni"
                        android:hint="DNI"
                        android:textColorHint="#fff"
                        android:textSize="20dp"
                        android:paddingLeft="13dp"
                        android:layout_marginTop="15dp"
                        android:inputType="number"
                        android:maxLength="8"
                        android:textColor="#fff"
                        android:maxLines="1"
                        android:background="@android:color/transparent" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/con1"
                        android:paddingTop="15dp">
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/login_caja_texto">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:tint="#fff"
                    android:src="@drawable/key2"
                    ></ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contra1"
                    android:hint="Contraseña nueva"
                    android:textColorHint="#fff"
                    android:textSize="20dp"
                    android:paddingLeft="13dp"
                    android:maxLength="8"
                    android:layout_marginTop="15dp"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:maxLines="1"
                    android:background="@android:color/transparent" />
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/con2"
                android:paddingTop="15dp">
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@drawable/login_caja_texto">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:tint="#fff"
                        android:src="@drawable/key2"
                        ></ImageView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contra2"
                        android:hint="Repita la contraseña"
                        android:textColorHint="#fff"
                        android:textSize="20dp"
                        android:paddingLeft="13dp"
                        android:maxLength="8"
                        android:layout_marginTop="15dp"
                        android:inputType="textPassword"
                        android:textColor="#fff"
                        android:maxLines="1"
                        android:background="@android:color/transparent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnValidar"
                    android:gravity="center"
                    >
                  <TextView
                      android:layout_width="match_parent"
                      android:id="@+id/vali_cambio"
                      android:layout_height="40dp"
                      android:textSize="18dp"
                      android:text="VALIDAR"
                      android:background="@drawable/starter_rectangulo"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:textColor="@color/blanco"
                      ></TextView>

                    <!--<ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:src="@drawable/validacion_grabar"></ImageView>-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>