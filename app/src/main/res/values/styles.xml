<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/rojo</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/negro</item>
    </style>


    <style name="estilo_celda">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="MaterialTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/negro</item>

    </style>
    <style name="FacebookLoginButton">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/com_facebook_close</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
